.navbar.navbar-inverse.navbar-fixed-top
	.navbar-inner
		.container
			a.brand(href='/') Nutts!
			.nav-collapse.collapse
				ul.nav
					li.active
						a(href='/home') Home
					li
						a(href='/about') About
					-if(userObject)
						li
							a(href="javascript:void(0)") login as #{userObject.username}
						li
							a(href='/logout') Logout
					-else
						li
							a(href='/registration') Register
				
						
							

							
				form.navbar-form.pull-right(action='/login',method='post')
					input.span2(type='text',name="username", placeholder='Email')
					input.span2(type='password',name="password",placeholder='Password')
					button.btn(type='submit') Sign in